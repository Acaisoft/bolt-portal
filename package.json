{
  "name": "bolt-portal",
  "version": "0.1.0",
  "private": true,
  "license": "MIT",
  "scripts": {
    "start:local": "NODE_ENV=development REACT_APP_STAGE=local react-scripts start",
    "start": "NODE_ENV=development REACT_APP_STAGE=stage react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test --env=jsdom",
    "test:debug": "react-scripts --inspect-brk test --env=jsdom --runInBand",
    "test:all": "react-scripts test --watchAll=false",
    "prepare": "husky install"
  },
  "dependencies": {
    "@apollo/client": "^3.5.10",
    "@material-ui/core": "^4.12.4",
    "@material-ui/icons": "^4.11.3",
    "@material-ui/styles": "^4.11.5",
    "accounting": "^0.4.1",
    "apollo3-cache-persist": "^0.14.0",
    "classnames": "^2.3.1",
    "crypto-js": "^4.1.1",
    "echarts": "^5.3.2",
    "echarts-for-react": "^3.0.2",
    "filesize": "^8.0.7",
    "final-form": "^4.20.6",
    "final-form-arrays": "^3.0.2",
    "final-form-material-ui": "^0.3.0",
    "graphql": "^16.3.0",
    "keycloak-js": "^6.0.1",
    "leader-line": "^1.0.7",
    "lodash": "^4.17.21",
    "moment": "^2.29.2",
    "prop-types": "^15.8.1",
    "react": "^18.0.0",
    "react-dom": "^18.0.0",
    "react-final-form": "^6.5.9",
    "react-final-form-arrays": "^3.1.3",
    "react-resize-detector": "^7.0.0",
    "react-router-dom": "^6.3.0",
    "react-scripts": "5.0.0",
    "react-toastify": "^8.2.0",
    "subscriptions-transport-ws": "^0.11.0",
    "validate.js": "^0.13.1"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^5.16.3",
    "@testing-library/react": "^13.0.0",
    "enzyme": "^3.11.0",
    "enzyme-adapter-react-16": "^1.15.6",
    "jest-enzyme": "^7.1.2",
    "lint-staged": "^12.3.7",
    "prettier": "^2.6.2",
    "husky": "^7.0.0"
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ],
  "lint-staged": {
    "*.{js,json,css,md}": [
      "prettier --write"
    ]
  },
  "jest": {
    "coveragePathIgnorePatterns": [
      ",/node_modules/",
      ",/src/(index|serviceWorker|setupTests).js",
      ",/src/layout/theme.js",
      ",/src/(.+)/index.js",
      ",.*\\.(styles|mock)\\.js"
    ]
  }
}
